@model CemKeskin.Models.Entity.TBLEducation
    @{
        ViewBag.Title = "Operations";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }


    <body>
        <div id="layoutSidenav">

            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid">
                        <h1 class="mt-4">Eğitim Ekleme Bölümü</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item active">Admin Panel/Eğitim Bölümü/Eğitim Güncelle Bölümü</li>
                        </ol>
                        <div class="row">
                            <div class="col-xl-12">

                                @using (Html.BeginForm("Update", "Educations", FormMethod.Post))
                                {
                                    <p>Id Numarası:</p>
                                    @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @readonly = "true" })
                                    <p>Eğitim Başlığı:</p>
                                    @Html.TextBoxFor(m => m.EducationTitle, new { @class = "form-control" })
                                    <p>Eğitim Yılı:</p>
                                    @Html.TextBoxFor(m => m.EducationYear, new { @class = "form-control" })
                                    <p>Eğitim İçeriği:</p>
                                    @Html.TextBoxFor(m => m.EducationContent, new { @class = "form-control" })
                                    <p>Eğitim İkonu:</p>
                                    @Html.TextBoxFor(m => m.EducationIcon, new { @class = "form-control" })
                                    <p>Konumlandırma:</p>
                                    @Html.DropDownListFor(m => m.TBLResume.ResumeId, (List<SelectListItem>)ViewBag.vls, new { @class = "form-control" })

                                    <button class="btn btn-success" type="submit" style="margin-top:20px;">Güncelle</button>
                                }

                            </div>
                        </div>
                    </div>
                </main>
                <footer class="py-4 bg-light mt-auto"></footer>
            </div>
        </div>

    </body>
