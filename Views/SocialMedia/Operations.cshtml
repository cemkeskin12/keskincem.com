@model CemKeskin.Models.Entity.TBLSocialMedia
@{
    ViewBag.Title = "Operations";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<body>
    <div id="layoutSidenav">

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    <h1 class="mt-4">Sosyal Medya Ekleme Bölümü</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Admin Panel/Sosyal Medya Bölümü/Sosyal Medya Güncelle Bölümü</li>
                    </ol>
                    <div class="row">
                        <div class="col-xl-12">

                            @using (Html.BeginForm("Update", "SocialMedia", FormMethod.Post))
                            {
                                <p>Id Numarası:</p>
                                @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @readonly = "true" })
                                <p>Sosyal Medya Başlık:</p>
                                    @Html.TextBoxFor(m => m.SocialMediaName, new { @class = "form-control " })
                                    <p>Sosyal Medya Link:</p>
                                    @Html.TextBoxFor(m => m.SocialMediaLinks, new { @class = "form-control " })
                                    <p>Sosyal Medya İkon:</p>
                                    @Html.TextBoxFor(m => m.SocialMediaIcons, new { @class = "form-control " })

                                    <button class="btn btn-success" type="submit" style="margin-top:20px;">Güncelle</button>
                            }

                        </div>
                    </div>
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto"></footer>
        </div>
    </div>

</body>

