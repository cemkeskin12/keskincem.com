@model CemKeskin.Models.Classes.ForAdmin
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<body>
    <div id="layoutSidenav">

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    <h1 class="mt-4">İş Deneyimlerim Bölümü</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Admin Panel/İş Deneyimlerim Bölümü</li>
                    </ol>
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-suitcase"></i>
                                    İş Deneyimlerim Tablosu
                                </div>

                                <table class="table">
                                    <caption>İş Deneyimlerim Tablosunun Listesi</caption>
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">İş Deneyim Başlığı</th>
                                            <th scope="col">İş Deneyim Yılı</th>
                                            <th scope="col">İş Deneyim İçeriği</th>
                                            <th scope="col">İş Deneyim İkonu</th>
                                            <th scope="col">Konumlandırma</th>
                                            <th scope="col"><a href="@Url.Action("Create","Experiences")" class="btn btn-primary">Ekle</a></th>
                                            <th scope="col"></th>
                                        </tr>
                                    </thead>
                                    @foreach (var exp in Model.ExpPage)
                                    {
                                        <tbody>
                                            <tr>
                                                <th scope="row">@exp.Id</th>
                                                <td>@exp.ExpTitle</td>
                                                <td>@exp.ExpYear</td>
                                                <td>@exp.ExpContent</td>
                                                <td>@exp.ExpIcon</td>
                                                <td>
                                                    
                                                @if (exp.ResumeId==1)
                                                {
                                                    <p>Sol</p>
                                                }
                                                else
                                                {
                                                    <p>Sağ</p>
                                                }

                                                </td>
                                                <td><a href="@Url.Action("Operations","Experiences", new {id = exp.Id })" class="btn btn-success ">Güncelle</a></td>
                                                <td><a href="@Url.Action("Delete","Experiences", new {id = exp.Id })" class="btn btn-danger" style="width:87px;">Sil</a></td>
                                            </tr>
                                        </tbody>
                                    }

                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto"></footer>
        </div>
    </div>

</body>




